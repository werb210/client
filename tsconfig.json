{
  "include": [
    "client/src/api/**/*",
    "client/src/components/ui/form.tsx",
    "client/src/hooks/useOTP.ts",
    "client/src/lib/pwa.ts",
    "client/src/types/**/*",
    "client/src/utils/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "module": "ESNext",
    "strict": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "types": [
      "node",
      "vite/client",
      "cypress",
      "jest",
      "@testing-library/cypress"
    ],
    "paths": {
      "@/*": [
        "./client/src/*"
      ],
      "@shared/*": [
        "./shared/*"
      ]
    },
    "target": "ES2022"
  }
}