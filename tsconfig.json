{
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "module": "NodeNext",
    "strict": true,
    "lib": [
      "ES2022"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "paths": {
      "@shared/*": [
        "./shared/*"
      ]
    },
    "target": "ES2022"
  }
}
